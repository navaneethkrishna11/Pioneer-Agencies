<style>
 
  .reviews-section {
    padding: 5rem 1rem;
    background: var(--gradient-2);
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .reviews-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 30%, var(--primary-blue)20 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, var(--accent-cyan)15 0%, transparent 40%);
    opacity: 0.08;
    z-index: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    position: relative;
  }

