    <script>
        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.classList.contains('section-header')) {
                        entry.target.classList.add('animate');
                    }
                    if (entry.target.classList.contains('vm-card')) {
                        entry.target.classList.add('animate');
                    }
                    if (entry.target.classList.contains('why-pure-water')) {
                        entry.target.classList.add('animate');
                    }
                    if (entry.target.classList.contains('cta-section')) {
                        entry.target.classList.add('animate');
                    }
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.section-header, .box-container, .vm-card, .why-pure-water, .cta-section').forEach(el => {
            observer.observe(el);
        });

        // Add hover effects to cards
        document.querySelectorAll('.vm-card').forEach(card => {
            card.addEventListener('mouseenter', function(this: HTMLElement) {
                this.style.transform = 'translateY(-10px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function(this: HTMLElement) {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

    
        // Add ripple animation to CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes ripple {
                to {
                    transform: scale(4);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);

    

        // Loading optimization
        window.addEventListener('load', () => {
            // Preload any necessary resources
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                if (img.complete) {
                    img.classList.add('loaded');
                } else {
                    img.addEventListener('load', () => {
                        img.classList.add('loaded');
                    });
                }
            });
        });

        // Touch support for mobile devices
        let touchStartY = 0;
        let touchEndY = 0;

        document.addEventListener('touchstart', e => {
            touchStartY = e.changedTouches[0].screenY;
        });

    </script>
