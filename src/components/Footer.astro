---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-content">
      <!-- Company Info -->
      <div class="footer-section">
        <h3 class="footer-logo">{footerData.companyName}</h3>
        <p class="footer-tagline">Trusted water purifier sales & service in Tirur since 2007. RO, UV, Kent, SafeDrops, and complete water treatment solutions.</p>
      </div>

      <!-- Quick Links -->
      <div class="footer-section">
        <h4>Quick Links</h4>
        <ul class="footer-links">
          {footerData.quickLinks.map((link) => (
            <li><a href={link.url}>{link.name}</a></li>
          ))}
        </ul>
      </div>

      <!-- Social Links -->
      <div class="footer-section">
        <h4>Follow Us</h4>
