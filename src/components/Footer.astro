          {footerData.socialLinks.map((social) => (
            <a href={social.url} class="social-link" target="_blank" rel="noopener noreferrer">
              {social.icon === 'Facebook' && (
                 <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
