              {social.icon === 'JustDial' && (
               <svg viewBox="0 0 100 100" fill="currentColor" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6">
                    <circle cx="50" cy="50" r="48" stroke="currentColor" stroke-width="4" fill="none"/>
                    <text x="50%" y="55%" text-anchor="middle" fill="currentColor" font-size="40" font-family="Arial, sans-serif" dy=".3em">JD</text>
               </svg>

              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
  
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <p>&copy; {footerData.year} {footerData.companyName}. All rights reserved.</p>
        <p>Website proudly developed by our in house IT Team. </p>    
      </div>
      
  </div>
</footer>

<style>
  .footer {
    background: var(--gradient-2);
    border-top: 1px solid var(--glass-border);
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-1);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    padding: 3rem 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    text-align: justify;
  }

  .footer-section h3,
  .footer-section h4 {
    color: var(--white);
    margin-bottom: 1rem;
  }

  .footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-tagline {
    color: var(--slate-100);
    opacity: 0.8;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .contact-link {
    color: var(--accent-cyan);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: var(--primary-blue);
  }

  .footer-section h4 {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: var(--slate-100);
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--primary-blue);
    opacity: 1;
    padding-left: 0.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 40px;
    height: 40px;
    background: var(--glass);
    border: 1px solid var(--glass-border);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--slate-100);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: var(--gradient-1);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(14, 165, 233, 0.3);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .footer-bottom {
    border-top: 1px solid var(--glass-border);
    padding: 1.5rem 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: var(--slate-100);
    opacity: 0.7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-content {
      padding: 2rem 0 1.5rem;
      grid-template-columns: 1fr;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .contact-info {
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 0 0.5rem;
    }

    .footer-content {
      padding: 1.5rem 0 1rem;
    }

    .footer-logo {
      font-size: 1.3rem;
    }

    .social-link {
      width: 36px;
      height: 36px;
    }

    .social-link svg {
      width: 18px;
      height: 18px;
    }
  }
</style>