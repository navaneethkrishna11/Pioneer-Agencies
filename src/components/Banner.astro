<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
       

        /* Main Container */
        .unboxing-container {
            padding: 6rem 0;
            position: relative;
            background: linear-gradient(135deg, var(--light) 0%, var(--gray-100) 100%);
            overflow: hidden;
        }

        .unboxing-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(6, 182, 212, 0.05) 0%, transparent 50%);
            pointer-events: none;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 10;
        }

        /* Section Header */
        .section-header {
            text-align: center;
            margin-bottom: 4rem;
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .section-header.animate {
            opacity: 1;
            transform: translateY(0);
        }

        .section-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(99, 102, 241, 0.1);
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1rem;
            border: 1px solid rgba(99, 102, 241, 0.2);
        }

        .section-badge::before {
            content: '🎯';
            font-size: 1.1rem;
        }

        .section-title {
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 800;
            margin-bottom: 1rem;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1.2;
        }

        .section-subtitle {
            font-size: 1.2rem;
            color: var(--gray-600);
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Unboxing Animation */
        .unboxing-wrapper {
            perspective: 1000px;
            margin-bottom: 4rem;
        }

        .box-container {
            position: relative;
            width: 100%;
            height: 300px;
            margin: 0 auto;
            transform-style: preserve-3d;
            transition: all 1.2s cubic-bezier(0.4, 0, 0.2, 1);
            opacity: 0;
            transform: translateY(100px) rotateX(45deg);
        }

        .box-container.animate {
            opacity: 1;
            transform: translateY(0) rotateX(0deg);
        }

        .box-lid {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 200px;
            height: 40px;
            background: var(--gradient-primary);
            border-radius: 8px 8px 0 0;
            box-shadow: var(--shadow-lg);
            transition: all 1s cubic-bezier(0.4, 0, 0.2, 1) 0.5s;
            z-index: 20;
        }

        .box-lid.open {
            transform: translateX(-50%) translateY(-60px) rotateX(-120deg);
            transform-origin: bottom;
        }

        .box-base {
            position: absolute;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            width: 200px;
            height: 120px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(15px);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 0 0 8px 8px;
            box-shadow: var(--shadow-xl);
            z-index: 10;
        }

        .box-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.5s;
        }

        .box-content.show {
            opacity: 1;
        }

        .box-icon {
            font-size: 3rem;
            margin-bottom: 0.5rem;
            animation: float 3s infinite ease-in-out 2s;
        }

        .box-text {
            font-size: 0.9rem;
            font-weight: 600;
            color: #fff;
            text-align: center;
        }

        /* Vision & Mission Cards */
        .vision-mission-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 4rem;
        }

        .vm-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: var(--shadow-xl);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(50px) scale(0.9);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .vm-card.animate {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        .vm-card:nth-child(1) {
            transition-delay: 0.2s;
        }

        .vm-card:nth-child(2) {
            transition-delay: 0.4s;
        }

        .vm-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
        }

        .vm-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: var(--shadow-2xl);
        }

        .vm-icon {
            width: 80px;
            height: 80px;
            background: var(--gradient-glow);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(99, 102, 241, 0.2);
        }

        .vm-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #fff;
        }

        .vm-description {
            font-size: 1rem;
            color: var(--gray-600);
            line-height: 1.7;
            margin-bottom: 1.5rem;
        }

        .vm-features {
            list-style: none;
        }

        .vm-features li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            font-size: 0.9rem;
            color: var(--gray-600);
        }

        .vm-features li::before {
            content: '✨';
            font-size: 1rem;
            color: var(--accent);
        }

        /* Why Pure Water Section */
        .why-pure-water {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 3rem;
            box-shadow: var(--shadow-2xl);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
            margin-bottom: 4rem;
        }

        .why-pure-water.animate {
            opacity: 1;
            transform: translateY(0);
        }

        .why-pure-water::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(6, 182, 212, 0.05) 0%, transparent 70%);
            pointer-events: none;
        }

        .why-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .why-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            color:wheat;
            -webkit-background-clip: text;
           
            background-clip: text;
        }

        .why-subtitle {
            font-size: 1.2rem;
            color: var(--gray-600);
            max-width: 700px;
            margin: 0 auto;
        }

        .problems-solutions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            margin-bottom: 3rem;
        }

        .problems-section, .solutions-section {
            position: relative;
        }

        .section-label {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .problems-label {
            background: rgba(239, 68, 68, 0.1);
            color: var(--danger);
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        .solutions-label {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

        .issue-item, .solution-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding: 1rem;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .issue-item {
            background: rgba(239, 68, 68, 0.05);
            border: 1px solid rgba(239, 68, 68, 0.1);
        }

        .solution-item {
            background: rgba(16, 185, 129, 0.05);
            border: 1px solid rgba(16, 185, 129, 0.1);
        }

        .issue-item:hover, .solution-item:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .item-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .issue-icon {
            background: rgba(239, 68, 68, 0.2);
            color: var(--danger);
        }

        .solution-icon {
            background: rgba(16, 185, 129, 0.2);
            color: var(--success);
        }

        .item-content h4 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: white;
        }

        .item-content p {
            font-size: 0.9rem;
            color: var(--gray-600);
            line-height: 1.5;
        }

     
        /* Animations */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.8; transform: scale(1.05); }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .vision-mission-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .problems-solutions {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
            
            .container {
                padding: 0 1.5rem;
            }
        }

        @media (max-width: 768px) {
            .unboxing-container {
                padding: 4rem 0;
            }
            
            .container {
                padding: 0 1rem;
            }
            
            .section-header {
                margin-bottom: 3rem;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .vm-card {
                padding: 2rem;
            }
            
            .vm-icon {
                width: 60px;
                height: 60px;
                font-size: 2rem;
            }
            
            .vm-title {
                font-size: 1.3rem;
            }
            
            .why-pure-water {
                padding: 2rem;
            }
            
            .why-title {
                font-size: 2rem;
            }
            
            .cta-section {
                padding: 2rem;
            }
            
            .cta-title {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .unboxing-container {
                padding: 3rem 0;
            }
            
            .section-title {
                font-size: 1.8rem;
            }
            
            .section-subtitle {
                font-size: 1rem;
            }
            
            .vm-card {
                padding: 1.5rem;
            }
            
            .why-pure-water {
                padding: 1.5rem;
            }
            
            .item-icon {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }
            
            .item-content h4 {
                font-size: 0.9rem;
            }
            
            .item-content p {
                font-size: 0.8rem;
            }
            
            .cta-button {
                padding: 0.8rem 2rem;
                font-size: 1rem;
            }
        }

        /* Fallback for older browsers */
        @supports not (backdrop-filter: blur(10px)) {
            .section-badge {
                background: rgba(99, 102, 241, 0.2);
            }
            
            .vm-icon {
                background: rgba(99, 102, 241, 0.1);
            }
        }

        /* Accessibility */
        @media (prefers-reduced-motion: reduce) {
            *, *::before, *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>
